<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.helper.RC4ValidationController">
   <children>
      <Label contentDisplay="RIGHT" text="Only 1's and 0's" textFill="WHITE">
         <font>
            <Font name="Agency FB" size="19.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../css/style.css">
         <children>
            <Label text="Random Seed" textFill="WHITE">
               <font>
                  <Font name="Agency FB" size="18.0" />
               </font>
            </Label>
             <TextField fx:id="rc4Field" prefHeight="37.0" promptText="type in a random seed">
               <styleClass>
                  <String fx:value="edgy" />
                  <String fx:value="lightgrey" />
               </styleClass>
               <font>
                  <Font name="Agency FB" size="19.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Label fx:id="rc4Warning" text="Please type in a random seed" textFill="#a10000" visible="false">
         <font>
            <Font name="Agency FB" size="16.0" />
         </font>
      </Label>
   </children>
</VBox>
